mixin header(userData)
  header#topBanner
    div.inner 
      div.header 
        a(href="/")
          img(src="/c/LogoWhite.png")
          | krislawton.com
      div.right
        button.about
          img(src="/c/IconAbout.png")
          div.badge 0
        button.user
          img(src="/c/IconProfile.png")
          div.badge 0
        div.inbox-button in
          div.badge 0
        button.achievements
          img(src="/c/IconAchievement.png")
          div.badge 0
        div.nav-button na
          div.badge 0
  div#topDialogues
    div.top-dialogue.about-dialogue
      h2 About
      div.inner
        div.big-links
          a.button(href="/help/home")
            span Help home
          a.button(href="/help/chat")
            span Chat guide
          a.button(href="/help/policies")
            span Policies
        h3 Changelog
        div.changelog
    div.top-dialogue.profile-dialogue
      - 
        var loggedIn = userData.loggedIn
        var username = loggedIn ? userData.username : "not logged in"
      h2 Profile (#{username})
      div.inner
        div.big-links
          - 
            var linkTo = "/" + (loggedIn ? "user/" + userData.permaid + "-" + userData.username : "login")
          a.button(href=linkTo)
            span My profile
          a.button(href="/settings")
            span Settings
          a.button(href="/users")
            span All users
    div.top-dialogue.achievements-dialogue
      h2 Achievements
      div.inner
        div.big-links
          a.button(href=linkTo)
            span Achievements on my profile
          a.button(href="/achievements")
            span All achievements
        h3 Recent achievements
        div.recent-achievements