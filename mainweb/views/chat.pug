doctype html
html
  head
    title Chat - krislawton.com
    include /includes/htmlHead.pug
    link(rel="stylesheet", href="/u/common.css")
    script(src="/c/dataTransformers.js")
    script(src="/u/chat.js")
    link(rel="stylesheet", href="/u/chat.css")
  body.chats-open.info-open
    include /includes/rootPageHead.pug
    +header(userData)
    div#chatToolbar
      button.left.button
        span.chevron &gt;
        |  Toggle chats
      button.right.button
        | Toggle info 
        span.chevron &lt;
    div#chats
      div.rooms
    div#info
      div.card
        h2 Users
        div#users
      div.card
        h2 Starred
        div#nostars No messages starred yet! Star messages that are important 
          | to you or that you want to save for later. 
          | No one else can see what messages you've starred.
        div#starred
    div#center
      div#tableContainer
        table
          tbody#chatContainer
      div#sendContainer
        textarea(autofocus)